{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_COLOR_DIAGNOSTICS": "ON"
      }
    },
    {
      "name": "gcc",
      "inherits": "base",
      "displayName": "gcc",
      "toolchainFile": "cmake/gcc-aarch64.cmake"
    },
    {
      "name": "clang",
      "inherits": "base",
      "displayName": "clang",
      "toolchainFile": "cmake/clang-aarch64.cmake"
    }
  ]
}
